        <TableRow android:id="@id/rowYoutube" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_youtube" android:contentDescription="@string/contact_details_youtube" style="@style/RowHeaderIcon" />
            <TextView android:id="@id/youtube" android:tag="youtubeUrl" style="@style/ClickableContactDetailText" />
        </TableRow>
    </TableLayout>
</LinearLayout>