        <TableRow android:id="@id/rowWeb" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_www" android:contentDescription="@string/contact_details_website" style="@style/RowHeaderIcon" />
            <TextView android:autoLink="web" android:id="@id/web" android:tag="www" style="@style/ClickableContactDetailText" />
        </TableRow>
        <TableRow android:id="@id/rowBlog" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_blog" android:contentDescription="@string/contact_details_blog" style="@style/RowHeaderIcon" />
            <TextView android:autoLink="web" android:id="@id/blog" android:tag="blogUrl" style="@style/ClickableContactDetailText" />
        </TableRow>
        <TableRow android:id="@id/rowFacebook" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_facebook" android:contentDescription="@string/contact_details_facebook" style="@style/RowHeaderIcon" />
            <TextView android:id="@id/facebook" android:tag="facebook" style="@style/ClickableContactDetailText" />
        </TableRow>
        <TableRow android:id="@id/rowTwitter" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_twitter" android:contentDescription="@string/contact_details_twitter" style="@style/RowHeaderIcon" />
            <TextView android:id="@id/twitter" android:tag="twitter" style="@style/ClickableContactDetailText" />
        </TableRow>
        <TableRow android:id="@id/rowLinkedIn" style="@style/DetailsRowStyle">
            <ImageView android:src="@drawable/ic_profile_linkedin" android:contentDescription="@string/contact_details_linkedin" style="@style/RowHeaderIcon" />
            <TextView android:id="@id/linkedin" android:tag="linkedIn" style="@style/ClickableContactDetailText" />
