                <LinearLayout android:id="@id/details_layout_title" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:id="@id/location_label" android:layout_width="100.0dip" android:layout_height="wrap_content" android:text="@string/title" />
                    <TextView android:id="@id/title" android:paddingLeft="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/BodyText" />
                </LinearLayout>
                <LinearLayout android:id="@id/details_layout_department" android:paddingTop="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="100.0dip" android:layout_height="wrap_content" android:text="@string/contact_details_organisation_department" />
                    <TextView android:id="@id/department" android:paddingLeft="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/BodyText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <include android:id="@id/bio_header" android:layout_width="fill_parent" layout="@layout/list_section_header_holo" />
        <LinearLayout android:orientation="vertical" android:id="@id/bio_layout" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/details" android:padding="0.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BodyText" />
        </LinearLayout>
        <include android:id="@id/contact_header" android:layout_width="fill_parent" layout="@layout/list_section_header_holo" />
        <include android:id="@id/contactDetailsBlock" android:layout_width="fill_parent" layout="@layout/contact_details_block" />
    </LinearLayout>
</ScrollView>